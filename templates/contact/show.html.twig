{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contacts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
        </tbody>
    </table>
<div class="row">
    <a class="btn" href="{{ path('contact_index') }}">Retour</a>

    <a class="btn" href="{{ path('contact_edit', {'id': contact.id}) }}">Modifier</a>
    </div>
    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
