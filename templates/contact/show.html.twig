{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contacts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ contact.company.name }}</td>
            </tr>
        </tbody>
    </table>
<div class="row">
    <a class="btn" href="{{ path('contact_index') }}">Retour</a>
    {% if is_granted('EDIT') %}
    <a class="btn" href="{{ path('contact_edit', {'id': contact.id}) }}">Modifier</a>
    {% endif %}
    </div>
    {% if is_granted('DELETE') %}
    {{ include('contact/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
